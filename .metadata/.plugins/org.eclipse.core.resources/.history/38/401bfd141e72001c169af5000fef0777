package paypal;

import java.util.AbstractMap;
import java.util.Comparator;
import java.util.HashMap;
import java.util.Map;
import java.util.Map.Entry;
import java.util.PriorityQueue;

public class _B26ReorganizeString {

	public static void main(String[] args) {

		String str = "aabcdbaabde";
		System.out.println(reorganizeString(str));
//		q.add(new AbstractMap.SimpleEntry<Character, Integer>('B', 2));
	}

	public static String reorganizeString(String s) {
		Map<Character, Integer> frequencies = getCharFrequency(s);
		System.out.println(frequencies);
		PriorityQueue<Map.Entry<Character, Integer>> maxHeap = new PriorityQueue<>(
				new Comparator<Map.Entry<Character, Integer>>() {
					public int compare(Entry<Character, Integer> arg0, Entry<Character, Integer> arg1) {
						return arg1.getValue().compareTo(arg0.getValue());
					}
		});
		maxHeap.addAll(frequencies.entrySet());
		
		StringBuilder sb = new StringBuilder(s.length());
		
		Entry<Character, Integer> entry = maxHeap.poll();
		if((s.length()+1)/2 < entry.getValue())
			return "";
		int counter = 0;
		while(!maxHeap.isEmpty()) {
			Entry<Character, Integer> current = maxHeap.poll();
			Entry<Character, Integer> next = maxHeap.poll();
			sb.append(current.getKey());
			sb.append(next.getKey());
			frequencies.put(current.getKey(), current.getValue() - 1);
			frequencies.put(next.getKey(), next.getValue() - 1);
			if(frequencies.get(current.getKey()) > 0)
				maxHeap.add(current);
		}
		return null;
	}

	private static Map<Character, Integer> getCharFrequency(String s) {
		Map<Character, Integer> frequencies = new HashMap<Character, Integer>();
		for(char c : s.toCharArray())
			frequencies.put(c, frequencies.getOrDefault(c, 0) + 1);
		return frequencies;
	}
}
