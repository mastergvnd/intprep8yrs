package arrays;

import org.junit.Assert;

//Input:  n = "218765"
//Output: "251678"
//
//Input:  n = "1234"
//Output: "1243"
//
//Input: n = "4321"
//Output: "Not Possible"
//
//Input: n = "534976"
//Output: "536479"
//https://leetcode.com/problems/next-greater-element-iii/


public class _A3_NextGreaterNumber {

	public static void main(String[] args) {
		Assert.assertEquals("Wrong Number",251678, getNextGreaterNumber(218765));
	}

	private static int getNextGreaterNumber(int num) {
		int temp = num;
		int lastDigit = temp % 10;
		int nextGreaterNumber = lastDigit; 
		temp = temp / 10;
		
		System.out.println(num);
		
		while(temp > 0) {
			int remainder = temp % 10;
			if(remainder < lastDigit) {
				int maxDigitRoundOff = (int) Math.pow(10, (int)Math.log10(nextGreaterNumber));
				int firstdigit = (int) (nextGreaterNumber / maxDigitRoundOff);
				nextGreaterNumber = nextGreaterNumber - (firstdigit * maxDigitRoundOff);
				System.out.println("First Digit : " + firstdigit);
				System.out.println("Remainder : " + remainder);
				nextGreaterNumber = ((nextGreaterNumber % 10) * 10) + remainder;
				break;
			} else {
				nextGreaterNumber = (nextGreaterNumber * 10) + remainder; 
				System.out.println(nextGreaterNumber);
			}
			temp = temp /10;
		}
		return -1;
	}

}
