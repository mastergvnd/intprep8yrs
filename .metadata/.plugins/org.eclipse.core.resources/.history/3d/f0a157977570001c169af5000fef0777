package paypal;

import java.util.Arrays;

public class _B24ReplaceSpecialCharwithCharToGetGoodString {

	public static void main(String[] args) {
		String str = "abcdefghijkl?nopqrstuvwxy?";
		System.out.println("Good String : " + getGoodString(str));
	}

	private static String getGoodString(String str) {
		if(str.length() < 26)
			return null;
		char s[] = str.toCharArray();
		for(int i = 25; i<str.length(); i++) {
			int count[] = new int[26];
			for(int j=i; j>=0; j--) {
				if(s[j] != '?')
					count[s[j] - 'a']++;
			}
			if(isValid(count)) {
				 int cur = 0;
		         while (count[cur] > 0)
		        	cur++;
				for(int j=i; j>0; j--) {
					if(s[j] == '?')  {
						s[j] = (char)(cur + 'a');
						while (count[cur] > 0)
							cur++;
					}
				}
				return new String(s);
			}
			
		}
		
		return "";
	}

	private static boolean isValid(int[] count) {
		for (int i = 0; i < count.length; i++) {
			if(count[i] > 1)
				return false;
		}
		return true;
	}

}
