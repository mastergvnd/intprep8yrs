package com.testing;

import java.io.FileWriter;
import java.io.IOException;

import com.opencsv.CSVWriter;

public class OpenCSVEx {

	public static void main(String[] args) throws Exception {
		FileWriter w = new FileWriter("D:\\yourfile.csv");
				CSVWriter writer = new CSVWriter(w, '\t');
				writer.writeNext(new String[]{"Govind", "Kumar", "Gupta"}, false);
				writer.flush();
				CSVWriter writer2 = new CSVWriter(w, '\t');
				writer.writeNext(new String[]{"Saurabh", "Kumar", "Gupta"}, true);
				writer2.flush();
				w.close();
				System.out.println("Compelted");
	}

}
